#!/bin/sh
cd /opt/Blizcord/
chmod +x Blizcord.sh
wget https://github.com/Bleuzen/Blizcord/releases/download/var_pkgver/Blizcord.exe
CHECKSUM="var_md5sum"

CHECKSUM_TEMP_FILE=$(mktemp)
echo "$CHECKSUM  Blizcord.exe" > $CHECKSUM_TEMP_FILE
if md5sum --status -c $CHECKSUM_TEMP_FILE; then
    chmod +x /usr/bin/blizcord
    chmod +x /usr/bin/blizcord-gui
    chmod o+rwx /opt/Blizcord/
else
    # The MD5 sum didn't match
    exit 1
fi
